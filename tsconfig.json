{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"module": "es2020",
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
